{
    "name": "SemEval_STP_PGAT_MR_Net",
    "n_gpu": 1,

    "arch": {
        "type": "PGAT_MR_Net",
        "args": {
            "in_dim": 300, 
            "hidden_dim": 600,
            "out_dim": 600,
            "pos_dim": 100,
            "num_layers": 1,
            "heads": [4, 1],
            "feat_drop": 0.1, 
            "attn_drop": 0.1
        }
    },
    "train_data_loader": {
        "type": "MaskedGraphDataLoader",
        "args":{
            "data_path": "/datadrive/structure_expan/data/semeval-2016-task-14/noun.stp.average.fasttext.pickle.bin",
            "dataset_type": "semeval_stp",
            "batch_size": 448,
            "negative_size": 30,
            "hard_negative_ratio": 0, 
            "expand_factor": 50,
            "shuffle": true,
            "num_workers": 16,
            "batch_type": "small_batch",
            "example_type": "graph_and_node",
            "cache_refresh_time": 100000000,
            "normalize_embed": true
        }
    },
    "validation_data_loader": {
        "type": "MaskedGraphDataLoader",
        "args":{
            "data_path": "/datadrive/structure_expan/data/semeval-2016-task-14/noun.stp.average.fasttext.pickle.bin",
            "dataset_type": "semeval_stp",
            "batch_size": 64,
            "negative_size": 300,
            "expand_factor": 50, 
            "shuffle": true,
            "num_workers": 16,
            "batch_type": "small_batch",
            "example_type": "graph_and_node",
            "cache_refresh_time": 100000000,
            "normalize_embed": true
        }
    },
    "test_data_loader": {
        "type": "MaskedGraphDataLoader",
        "args":{
            "data_path": "/datadrive/structure_expan/data/semeval-2016-task-14/noun.stp.average.fasttext.pickle.bin",
            "dataset_type": "semeval_stp",
            "batch_size": 1,
            "expand_factor": 50, 
            "shuffle": true,
            "num_workers": 8,
            "batch_type": "large_batch",
            "example_type": "graph_and_node",
            "cache_refresh_time": 100000000,
            "normalize_embed": true
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "bce_loss",
    "metrics": [
        "macro_averaged_rank", "batched_topk_hit", "batched_scaled_MRR"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "mode": "max",
            "factor": 0.5,
            "patience": 5,
            "verbose": true
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "/datadrive/structure_expan/saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "max val_batched_topk_hit",
        "early_stop": 16,
        "grad_clip": -1,

        "tensorboardX": true
    }
}
